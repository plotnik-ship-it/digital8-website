    sparkles: `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M16 18a2 2 0 0 1 2 2a2 2 0 0 1 2 -2a2 2 0 0 1 -2 -2a2 2 0 0 1 -2 2" /><path d="M8.5 13.5a2.5 2.5 0 1 1 3.544 -3.544l4.956 -4.956a2.5 2.5 0 1 1 3.543 3.543l-4.956 4.956a2.5 2.5 0 1 1 -3.543 -3.543" /><path d="M14.5 5.5a2.5 2.5 0 1 1 3.543 -3.543l-4.956 4.956a2.5 2.5 0 1 1 -3.543 3.543l4.956 -4.956" /><path d="M6 18a2 2 0 0 1 2 2a2 2 0 0 1 2 -2a2 2 0 0 1 -2 -2a2 2 0 0 1 -2 2" /></svg>`,
    code: `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 8l-4 4l4 4" /><path d="M17 8l4 4l-4 4" /><path d="M14 4l-4 16" /></svg>`
}
---
<div class="group h-full bg-white/5 p-8 rounded-lg border border-white/10 hover:border-brand-primary/80 transition-all duration-300 transform hover:-translate-y-1">
    <div class="text-brand-primary mb-4" set:html={icons[icon]} />
    <h3 class="text-xl font-semibold clash-display mb-2">{title}</h3>
    <p class="text-white/70 text-sm leading-relaxed">{description}</p>
</div>
