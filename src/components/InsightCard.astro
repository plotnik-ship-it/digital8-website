---
import { formatDate } from '../utils/dateUtils.js';
const { url, category, date, title, description } = Astro.props;
---
<a href={url} class="group block bg-[#111111] border border-gray-800 rounded-3xl p-6 md:p-8 transition-all duration-300 hover:bg-gray-800/20 hover:border-brand-primary/30 insight-card">
    <div class="flex flex-col md:flex-row md:items-center justify-between">
        <div>
            <p class="text-sm text-gray-400 mb-2">{category} &bull; {formatDate(date)}</p>
            <h4 class="text-xl md:text-2xl font-bold clash-display text-white group-hover:text-brand-primary transition-colors duration-300">{title}</h4>
            <p class="text-gray-400 mt-2 hidden md:block">{description}</p>
        </div>
        <div class="mt-4 md:mt-0 md:ml-8 flex-shrink-0 transform md:group-hover:translate-x-2 transition-transform duration-300">
             <div class="p-3 bg-brand-dark/50 backdrop-blur-sm rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-brand-primary">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
             </div>
        </div>
    </div>
</a>
