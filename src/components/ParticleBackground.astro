<div id="particle-background" class="absolute inset-0 z-0"></div>

<script is:inline>
document.addEventListener('DOMContentLoaded', () => {
    if (typeof particlesJS === 'undefined') {
        console.error('particles.js not loaded');
        return;
    }

    particlesJS('particle-background', {
        "particles": {
            "number": {
                "value": 160,
                "density": {
                    "enable": true,
                    "value_area": 800
                }
            },
            "color": {
                "value": "#ffffff"
            },
            "shape": {
                "type": "circle"
            },
            "opacity": {
                "value": 0.8,
                "random": true,
                "anim": {
                    "enable": true,
                    "speed": 1,
                    "opacity_min": 0.1,
                    "sync": false
                }
            },
            "size": {
                "value": 2.5,
                "random": true,
                "anim": {
                    "enable": false
                }
            },
            "line_linked": {
                "enable": false
            },
            "move": {
                "enable": true,
                "speed": 0.5, // Slower ambient drift for a calmer feel
                "direction": "none",
                "random": true,
                "straight": false,
                "out_mode": "out",
                "bounce": false
            }
        },
        "interactivity": {
            "detect_on": "canvas",
            "events": {
                "onhover": {
                    "enable": true,
                    "mode": "repulse"
                },
                "onclick": {
                    "enable": false
                },
                "resize": true
            },
            "modes": {
                "repulse": {
                    "distance": 150, // Increased distance for a wider interaction area
                    "duration": 0.6   // Slightly longer duration for a smoother reaction
                }
            }
        },
        "retina_detect": true
    });
});
</script>
<script is:inline src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
